(jbuild_version 1)

(executable
 ((name ago)
  (public_name ago)
  (libraries
   (unix))))

(ocamllex
 (agolex))

(install
 ((section man)
  (files
   (ago.1))))

(alias
 ((name runtest)
  (deps
   (ago.exe))
  (action
   (run ${<} -test))))

(rule
 ((targets
   (ago.1))
  (deps
   (ago.pod))
  (action
   (run
    ${bin:sh}
    -c
    "pod2man -s 1 -r Alpha -c opam.ocaml.org ago.pod > ago.1"))))

